<Page x:Class="AutoVsCEnv_WPF.Forms.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:uc="clr-namespace:AutoVsCEnv_WPF.UserControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoVsCEnv_WPF.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <DockPanel>
        <uc:Title 
            DockPanel.Dock="Top"
            MainText="嗨！你好呀!" 
            SubText="欢迎使用 VScode C/C++ 一键配置工具" 
            Description="By SDchao From Bilibili"/>

        <WrapPanel
            DockPanel.Dock="Top"
            HorizontalAlignment="Center">
            <TextBlock>不知道如何使用？</TextBlock>
            <TextBlock x:Name="CheckVedio">
                <Hyperlink Click="CheckVideo_Click">点击查看视频教程</Hyperlink>
            </TextBlock>
        </WrapPanel>

        <Button
            Margin="200px 90px"     
            FontSize="30px" Click="Button_Click">
            开始
        </Button>
    </DockPanel>
</Page>
