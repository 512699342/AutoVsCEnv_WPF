<Page x:Class="AutoVsCEnv_WPF.Forms.Completed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:uc="clr-namespace:AutoVsCEnv_WPF.UserControls"
      xmlns:local="clr-namespace:AutoVsCEnv_WPF.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Completed">

    <DockPanel>
        <uc:UcTitle 
            DockPanel.Dock="Top"
            MainText="已完成配置" 
            SubText="部分配置需要重启后生效" 
            Description="千山万水总是情 给个三连行不行"/>

        <WrapPanel
            DockPanel.Dock="Top"
            HorizontalAlignment="Center">
            <TextBlock>如果该工具对您有所帮助，欢迎 </TextBlock>
            <TextBlock x:Name="CheckVedio">
                <Hyperlink Click="CheckDoc">三连支持</Hyperlink>
            </TextBlock>
        </WrapPanel>

        <Button
            Margin="200px 90px"     
            FontSize="30px" Click="Button_Click">
            再见
        </Button>
    </DockPanel>
</Page>
